%h1 Update profile data

= simple_form_for current_user, url: users_profile_path do |f|
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.input :name, label: 'First Name'

  = f.simple_fields_for :profile do |pf|
    .form-inputs
      = pf.input :last_name
  .form-actions
    = f.submit 'Save'
