.margin-top-10
  - if @users.present?
    %table
      %thead
        %tr
          %th First name
          %th Last name
          %th Email
          %th Joined
          %th Actions
      %tbody
        - @users.each do |u|
          %tr
            %td= link_to u.first_name, edit_admins_user_path(u)
            %td= u.last_name
            %td= u.email
            %td= u.updated_at
            %td
              = link_to "Edit", edit_admins_user_path(u), :class => 'btn btn-success btn-xs'
              = link_to "Destroy", admins_user_path(u), :method => :delete, data: { :confirm => "Are you sure?" }, :class => 'btn btn-danger btn-xs'
    .row
      .col-md-offset-5
        = paginate @users
  - else
    %h1.rating-h1 0 users registered.
